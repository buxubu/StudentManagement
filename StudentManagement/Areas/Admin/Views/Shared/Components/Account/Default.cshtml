    <div class="content">
        <a class="js-acc-btn">@Model.NameStudent</a>
    </div>
    <div class="account-dropdown js-dropdown">
        <div class="info clearfix">
            @*<div class="image">
            <a href="#">
            <img src="~/AdminAsset/images/icon/avatar-01.jpg" alt="John Doe" />
